@model List<MovieReport>
@using Newtonsoft.Json;

  <div class="container">

    <div style="width: 500px;"><canvas id="acquisitions"></canvas></div>

  </div>


  @section Scripts{

    <script>

        $(document).ready(function () {
          // '&quot;'
            var json = JSON.parse('@Html.Raw(JsonConvert.SerializeObject(Model))');
            var data = json;
           
            // const data = [
            //     { Tur: "aksiyon"", count: 10 },
            //     { year: 2011, count: 20 },
            //     { year: 2012, count: 15 },
            //     { year: 2013, count: 25 },
            //     { year: 2014, count: 22 },
            //     { year: 2015, count: 30 },
            //     { year: 2016, count: 28 },
            // ];

            new Chart(
                document.getElementById('acquisitions'),
                {
                    type: 'bar',
                    options: {
                        animation: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                enabled: false
                            }
                        }
                    },
                    data: {
                        labels: data.map(row => row.Tur),
                        datasets: [
                            {
                                label: 'Acquisitions by year',
                                data: data.map(row => row.Count)
                            }
                        ]
                    }
                }
            );
        })

      

    </script>
  }